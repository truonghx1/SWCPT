{
  "version": "2.0.0",
  "tasks": [
      {
          "label": "Clean previous executable",
          "type": "shell",
          "command": "cmd",
          "args": ["/C", "del", "${fileDirname}\\${fileBasenameNoExtension}.exe"],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "problemMatcher": [],
          "detail": "Task to remove previous executable before build."
      },
      {
          "type": "cppbuild",
          "label": "C/C++: g++.exe build file main --Truong",
          "command": "C:/MinGW/bin/g++.exe",
          "args": [
              "-fdiagnostics-color=always",
              "-g",
              "${file}", // Specifies the main file explicitly
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe" // Output file
          ],
          "options": {
              "cwd": "${fileDirname}"
          },
          "problemMatcher": [
              "$gcc"
          ],
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "dependsOn": "Clean previous executable",
          "detail": "Task generated by Debugger."
      }
  ]
}